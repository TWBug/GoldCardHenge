{
    "name": "taiwangoldcard.tw",
    "version": "1.0.0",
    "private": true,
    "license": "UNLICENSED",
    "description": "",
    "main": "index.js",
    "scripts": {
        "repl": "tsc && node --experimental-repl-await -r ./dist/repl.js",
        "develop": "npx gulp build",
        "prestart": "npm run build:i18n",
        "start": "npm run gulp && concurrently 'hugo server' 'netlify-cms-proxy-server' 'npm run babel:admin -- --watch' 'npm run babel:js-misc -- --watch'",
        "gulp": "NODE_ENV=production npx gulp build",
        "build": "npm run gulp && npm run build:finder && npm run hugo",
        "build:development": "npm run hugo -- --environment development",
        "build:staging": "npm run hugo -- --environment staging",
        "build:gh": "npm run babel && TZ='Asia/Taipei' npm run hugo -- --environment gh",
        "build:ghlocal": "npm run babel && npm run hugo -- --environment gh-local",
        "build:finder": "(cd src/finder && npm run finder:build)",
        "build:jobs": "ts-node scripts/ts/populateJobDb.ts processJobLists",
        "build:i18n": "ts-node scripts/ts/processI18nTranslations.ts",
        "build:jobs:stats": "ts-node scripts/ts/populateJobDb.ts getStats",
        "watch": "npx gulp watch",
        "lunr:index": "make lunr-index",
        "test": "npm run lunr:index && npm run cypress:run",
        "cypress:open": "cypress open",
        "cypress:run": "cypress run --spec cypress/integration/*.js",
        "babel:admin": "babel --presets=@babel/preset-env,@babel/preset-react --out-dir ./static/admin src/admin",
        "babel:js-misc": "babel --presets=@babel/preset-env,@babel/preset-react --out-dir ./static/js-misc src/js-misc",
        "babel": "npm run babel:admin && npm run babel:js-misc",
        "prehugo": "npm run babel && npm run lunr:index && npm run build:i18n",
        "hugo": "hugo --gc -D --cleanDestinationDir --minify",
        "hugo:server": "NODE_ENV=development && hugo server",
        "accessibility": "node ./src/accessibility/links > ./result-links.txt && node ./src/accessibility/images > ./result-images.txt && node ./src/accessibility/headlines > ./result-headlines.txt && node ./src/accessibility/buttons > ./result-buttons.txt && node ./src/accessibility/linktexts > ./result-linktexts.txt  && node ./src/accessibility/alt > ./result-alt.txt"
    },
    "author": "TEGO Team <it@taiwangoldcard.tw>",
    "devDependencies": {
        "@babel/cli": "^7.12.10",
        "@babel/core": "^7.12.10",
        "@babel/preset-env": "^7.12.11",
        "@babel/preset-react": "^7.12.10",
        "@fullhuman/postcss-purgecss": "^3.1.3",
        "@markusantonwolf/tailwind-css-plugin-custom-color-palette": "^1.1.0",
        "@markusantonwolf/tailwind-css-plugin-filters": "^1.2.0",
        "@tailwindcss/aspect-ratio": "^0.2.0",
        "@tailwindcss/ui": "^0.6.2",
        "alpinejs": "^2.8.0",
        "autoprefixer": "^9.8.6",
        "babel-plugin-transform-inline-environment-variables": "^0.4.3",
        "concurrently": "^5.3.0",
        "config": "^3.3.3",
        "cssnano": "^4.1.10",
        "cypress": "~6.0.1",
        "gulp": "^4.0.2",
        "gulp-babel": "^8.0.0",
        "gulp-clean": "^0.4.0",
        "gulp-concat": "^2.6.1",
        "gulp-minify": "^3.1.0",
        "gulp-postcss": "^9.0.0",
        "gulp-print": "^5.0.2",
        "gulp-rename": "^2.0.0",
        "js-yaml": "^3.14.1",
        "netlify-cms-proxy-server": "^1.3.8",
        "node-html-parser": "^2.0.2",
        "prettier": "^2.2.1",
        "prettier-plugin-go-template": "0.0.10",
        "string": "^3.3.3",
        "tailwindcss": "^1.9.6"
    },
    "dependencies": {
        "@tailwindcss/typography": "^0.2.0",
        "@types/cheerio": "^0.22.23",
        "@types/crc": "^3.4.0",
        "@types/js-yaml": "^4.0.0",
        "@types/node": "^14.14.22",
        "change-case": "^4.1.2",
        "cheerio": "^1.0.0-rc.5",
        "crc": "^3.8.0",
        "got": "^11.8.1",
        "knex": "^0.21.16",
        "limax": "^3.0.0",
        "nodejieba": "2.5.1",
        "opencc": "^1.1.1",
        "remove-markdown": "0.3.0",
        "sqlite3": "^5.0.1",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3"
    }
}
